
<section>
  <header>
    <h1>Login</h1>
  </header>

  <div class="form">
    <%= form_tag '/login' do %>
    
      <div class="input"> Email: </div>
      <%= text_field_tag :email %> 

      <div class="input"> Password: </div>
      <%= password_field_tag :password %>

      <div class="input"> <%= submit_tag "Submit", class: "btn btn-success"%> </div>
    <% end %>
  </div.>
</section>