
<section>
  <header>
    <h1>Login</h1>
  </header>

  <div class="form">
    <%= form_tag '/login' do %>
      <div class="input"> Email: <%= text_field_tag :email %> </div>
      <div class="input"> Password: <%= password_field_tag :password %> </div>
      <div class="input"> <%= submit_tag "Submit" %> </div>
    <% end %>
  </div.>
</section>