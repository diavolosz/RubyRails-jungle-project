
<section>
  <header>
    <h1>Signup!</h1>
  </header>

  <div class="form">
    <%= form_for :user, url: '/user' do |f| %>

      <div class="input"> First Name:</div>
      <%= f.text_field :first_name, :required => true %> 

      <div class="input"> Last Name:</div>
      <%= f.text_field :last_name, :required => true %> 

      <div class="input"> Email: </div>
      <%= f.text_field :email, :required => true %> 
      
      <div class="input"> Password: </div>
      <%= f.password_field :password, :required => true %>
      
      <div class="input"> Password Confirmation:  </div>
      <%= f.password_field :password_confirmation, :required => true %>

      <div class="input"> <%= f.submit "Submit", class: "btn btn-success" %> </div>

    <% end %>
  </div.>
</section>