
<section>
  <header>
    <h1>Signup!</h1>
  </header>

  <div class="form">
    <%= form_for :user, url: '/user' do |f| %>

      <div class="input"> Name: <%= f.text_field :name, :required => true %> </div>
      <div class="input"> Email: <%= f.text_field :email, :required => true %> </div>
      <div class="input"> Password: <%= f.password_field :password, :required => true %> </div>
      <div class="input"> Password Confirmation: <%= f.password_field :password_confirmation, :required => true %> </div>
      <div class="input"> <%= f.submit "Submit", class: "btn btn-success" %> </div>

    <% end %>
  </div.>
</section>